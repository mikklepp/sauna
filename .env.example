# Database
# PostgreSQL connection string (Vercel Postgres or external)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Direct URL for migrations (same as DATABASE_URL for most cases)
DIRECT_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Next.js Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Admin Authentication (MVP - simple password)
# Generate with: openssl rand -base64 32
ADMIN_PASSWORD="change-this-to-a-secure-password"

# Vercel Blob Storage (for logo uploads)
# Get from: https://vercel.com/dashboard/stores
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_xxxxxxxxxxxxx"

# PWA Configuration
NEXT_PUBLIC_PWA_ENABLED="true"

# Default Timezone (for new clubs)
DEFAULT_TIMEZONE="Europe/Helsinki"

# Cron Job Security
# Generate with: openssl rand -base64 32
CRON_SECRET="change-this-to-a-random-secret"

# Optional: Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""

# Optional: Error Tracking (Sentry)
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# Optional: Debug Mode
DEBUG="false"
NEXT_PUBLIC_DEBUG="false"

# Island Device Configuration
NEXT_PUBLIC_ISLAND_DEVICE_ENABLED="true"

# Session Configuration
SESSION_SECRET="change-this-to-a-random-secret-for-sessions"

# Node Environment
NODE_ENV="development"